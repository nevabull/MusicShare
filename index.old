<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Audio List</title>
    <link rel="stylesheet" href="style.css">
   


<script>

function cal() {  

var mediaFiles = [
    "Ain't No Johnny Cash.m4a",
    "Catching Coconuts.m4a",
    "Ypu Can Take Me.m4a"
]

mediaFiles.forEach(file => {
     document.createElement('audio').src = file;
  
   
   var downloadLink = document.createElement('a').href = file;
    
    downloadLink.download = file.split('/').pop();
    downloadLink.textContent = 'Download' + file;
             
    mediaFiles.map((file, index) => ( 
 

  
                    document.getElementById("audioFiles").innerHTML += 
                    "<div key={" + index + "}>" +
                    "<audio controls src={" + file +"}></audio>" +
                    "<a href={" + file + "} download>Download</a>" +
                    "</div>")
                )
                    });
                }
            

</script>
</head>
<body onload=cal()>
    <div class="audio-list">
        <h1>Music from Roy Payne</h1>
        <div id="audioFiles">
            <!-- Audio items will be inserted here by JavaScript -->
        </div>
    </div>
    
</body>
</html>
